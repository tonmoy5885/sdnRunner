    <hr/>

    <div class="container runnerDetails my-5">
        <div class="container" id="content">
            <div class="row text-center mb-5 text-primary">
                <h3>Runner Details</h3>
            </div>


            <div class="row">
                <div class="col-sm-6 form-group mb-2">
                    <label class="control-label" for="RunnerName"> <b>Runner Name </b></label>
                    <input type="text" class="form-control" id="RunnerName" name="RunnerName" value="">
                </div>

                <div class="col-sm-6 form-group mb-2">
                    <label class="control-label" for="RunnerDescription"> <b>Runner Description </b></label>
                    <input type="text" class="form-control" id="RunnerDescription" name="RunnerDescription" value="">
