            <div class="col-2 m-0 p-0"><label for="cp1-id" class="col-form-label">Control Plane Activity</label></div>
            
            <div class="col-6 m-0">
                <input type="text" class="form-control" id="cp1-id" name="cp1">
            </div>
            <div class="col-2 cp-xmark"><i class="fa-solid fa-xmark mt-2" id="cp-1-xmark"></i></div>
        </div> *@


