@page
@model ConfigModel
@{
    ViewData["Title"] = "Config page";
}

<div class="text-center my-3">
    <h4>Config Generetor v-3</h4>
</div>


@if(Model.hasData)
{
    <div class="container text-center mt-5">
        <a class="btn btn-primary" href="@Model.filepath" target="_blank">View JSON</a>
        <a class="btn btn-primary" href="@Model.filepath" target="_blank" download >Download JSON</a>
    </div>
}

else {

<form action="/Config" method="post" asp-antiforgery="true">

    <div class="container main">
        <div class="container position-relative" id="content">
            <div class="row h-100 mt-2 border">
                <aside class="col-md-3 bg-light" id="left">
