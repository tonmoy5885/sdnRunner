                                <div class="tab-pane active position-relative" id="tab1" role="tabpanel">

                                    <div class="row">

                                        <div class="col-sm-6">
                                            <h6 class="mb-1 text-center">Dev/prod</h6>
                                    
                                            <div id="dynamic-1">

                                            </div>

                                        </div>

                                        <div class="col-sm-6">
                                            <h6 class="mb-1 text-center">Public/FF/MC/USSsc/USNat</h6>

                                            <div id="dynamic-2">

                                            </div>

                                        </div>

                                    </div>
                                    <div id="dynamic-inputs-1">
                                        
                                    </div>

                                </div>
